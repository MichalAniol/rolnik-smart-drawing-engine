{
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "compilerOptions": {
        "target": "ES2020",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "sourceMap": false,
        "downlevelIteration": false,
        "outFile": "prod/index.js",
        "module": "AMD",
        "moduleResolution": "node"
    },
    "files": [
        "src/console.ts",
        "src/storage.ts",
        "src/dom.ts",
        "src/core.ts",
        "src/engine/initData.ts",
        "src/engine/countingCore.ts",
        "src/engine/drawing.ts",
        "src/engine/_index.ts",
        "src/_index.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}